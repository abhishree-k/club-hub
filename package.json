{
  "name": "club-hub",
  "version": "1.0.0",
  "description": "DSCE Clubs Hub - A platform for managing club memberships and events",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "clubs",
    "events",
    "student",
    "management"
  ],
  "author": "DSCE Clubs",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "app.js",
      "!node_modules/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
